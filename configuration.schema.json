{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "configurationVersion": {
      "type": "string",
      "description": "Which configuration version to use"
    },
    "services": {
      "type": "object",
      "description": "A list of services",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string",
            "description": "A short description of this service"
          },
          "maintainer": {
            "type": "string",
            "description": "The name of the maintainer for this service"
          },
          "address": {
            "type": "string",
            "description": "Which IP address / hostname to send the requests to"
          },
          "address_postfix": {
            "type": "string",
            "description": "Append a string to the end of your addres (ex: /v1)"
          },
          "scopes": {
            "type": "object",
            "description": "Scopes (endpoints) this service exposes",
            "additionalProperties": {
              "type": "object",
              "properties": {
                "methods": {
                  "type": "array"
                },
                "description": {
                  "type": "string"
                }
              },
              "required": [
                "methods", "description"
              ]
            }
          }
        },
        "required": [
          "description",
          "address",
          "scopes"
        ]
      }
    }
  },
  "required": [
    "configurationVersion",
    "services"
  ]
}