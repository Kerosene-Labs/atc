{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "configuration_version": {
      "type": "string",
      "description": "Which configuration version to use"
    },
    "server": {
      "type": "object",
      "description": "Settings pertaining to Request Director itself",
      "properties": {
        "responses": {
          "type": "object",
          "description": "Settings pertaining to responses coming from Request Director, as opposed to a microservice",
          "properties": {
            "json": {
              "type": "object",
              "description": "Settings pertaining to responses coming from Request Director in JSON format",
              "properties": {
                "enable": {
                  "type": "boolean",
                  "description": "Whether or not to respond with JSON. If disabled, Request Director will respond using headers only & No Content"
                }
              }
            }
          }
        },
        "request_forking": {
          "type": "object",
          "description": "A way of running asynchronous requests on the server side",
          "properties": {
            "enable": {
              "type": "boolean",
              "description": "Whether or not to allow request forking"
            }
          }
        }
      },
      "required": ["responses", "request_forking"]
    },
    "services": {
      "type": "object",
      "description": "A list of services",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string",
            "description": "A short description of this service"
          },
          "maintainer": {
            "type": "string",
            "description": "The name of the maintainer for this service"
          },
          "address": {
            "type": "string",
            "description": "Which IP address / hostname to send the requests to"
          },
          "address_postfix": {
            "type": "string",
            "description": "Append a string to the end of your addres (ex: /v1)"
          },
          "scopes": {
            "type": "object",
            "description": "Scopes (endpoints) this service exposes",
            "additionalProperties": {
              "type": "object",
              "properties": {
                "methods": {
                  "type": "array"
                },
                "description": {
                  "type": "string"
                }
              },
              "required": [
                "methods",
                "description"
              ]
            }
          }
        },
        "required": [
          "description",
          "address",
          "scopes"
        ]
      }
    }
  },
  "required": [
    "configuration_version",
    "services",
    "server"
  ]
}